@using SigortaApp.Entity.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Brand>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Marka Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Marka Adı</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Id</th>
            <td>@item.Name</td>
            <td>
                <a href="/Admin/Brand/DeleteBrand/@item.Id" id="DeleteBtn" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="btn btn-danger">Sil</a>
                <a href="#" class="btn btn-warning" onclick="funcUpdateTypes(@item.Id)">Güncelle</a>
            </td>
        </tr>
    }
</table>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal5">
    Yeni Marka
</button>
<br />
<br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index", new { page}))


<div class="modal inmodal fade" id="myModal5" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Marka Ekle</h4>
            </div>
            <form method="post" action="@Url.Action("AddBrand", "Brand")">
                <div class="modal-body">
                    <input type="text" id="brandid" name="Id" value="0" hidden />
                    <div class="form-control">
                        <label>Marka Adı</label>
                        <input type="text" id="brandname" name="Name" class="form-control" />
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Vazgeç</button>
                    <input type="submit" class="btn btn-primary" value="Kaydet" />
                </div>
            </form>
        </div>
    </div>
</div>

<script>

    function funcModalRefresh() {
        document.getElementById("brandid").value = "";
        document.getElementById("brandname").value = "";
    }

    function funcUpdateTypes(id) {
        $.ajax({
            url: '/Admin/Brand/UpdateBrand/' + id,
            type: "GET",
            dataType: "JSON",
            success: function (results2) {
                $("#myModal5").modal();
                funcModalRefresh();
                document.getElementById("brandid").value = results2.id;
                document.getElementById("brandname").value = results2.name;
            }
        });
    }
</script>